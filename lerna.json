{
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": [
    "packages/*"
  ],
  "command": {
    "publish": {
      "ignoreChanges": ["*.md", "**/test/**"],
      "message": "chore(release): publish",
      "allowBranch": "master",
      "conventionalCommits": true,
      "exact": true
    },
    "bootstrap": {
      "hoist": true
    }
  },
  "version": "1.0.0"
}
