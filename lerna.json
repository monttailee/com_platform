{
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": [
    "packages/*"
  ],
  "version": "1.0.0",
  "command": {
    "publish": {
      "ignoreChanges": ["*.md", "**/test/**"],
      "message": "chore(release): publish",
      "allowBranch": "main",
      "conventionalCommits": true,
      "exact": true
    }
  }
}